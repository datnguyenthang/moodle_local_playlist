<div class="container" id="local_playlist">
    <div class="two-column row"">
        <div class="col-lg-8 content-details">
            <div class="content-details-sub">
                <div class="main-con">
                    <div class="back-title" style="min-height: 35px;margin-top: 5px;">
                        <a href="/local/playlist/" class="">
                            <i class="fa fa-chevron-left back-icon"></i>
                            <span> {{#str}}back{{/str}}</span>
                        </a>
                    </div>
                    <div>
                        {{> local_playlist/details/_content}}
                    </div>                
                </div>
                <div class="content-desc">
                    {{> local_playlist/details/_description}}

                    {{> local_playlist/details/_comment}}
                </div>
            </div>
        </div>

        <div class="col-lg-4 related-content">
            {{> local_playlist/details/_related}}
        </div>
    </div>
</div>